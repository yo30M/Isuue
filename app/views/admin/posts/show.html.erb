<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
      <h2>投稿情報</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>画像</th>
            <th>投稿者</th>
            <th>タグ</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @post.get_image(100,100) %>
            </td>
            <td><%= @post.user.name %></td>
            <td><% @post.tag_list.each do |tag|%>
              <div class="btn btn-primary">
                <%= link_to tag, admin_posts_path(tag_name: tag), class: "text-white" %>
              </div>
                <% end %>
            </td>
          </tr>
        </tbody>
        <thead>
          <tr>
            <th>座り心地</th>
            <th>周辺情報</th>
          </tr>
          <tr>
            <td><%= @post.comfort %></td>
            <td><%= @post.environment %></td>
          </tr>
        </thead>
      </table>
      <div class="form-group">
        <%= link_to "削除", admin_post_path(@post), method: :delete, class: "btn btn-danger" %>
      </div>
      <div>
        <p>コメント件数：<%= @post.comments.count %></p>
          <% @post.comments.each do |comment| %>
            <%= comment.user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
            <%= link_to "削除", admin_post_comment_path(comment.post, comment), method: :delete, class: "btn btn-danger" %>
          <% end %>
      </div>
    </div>
  </div>
</div>