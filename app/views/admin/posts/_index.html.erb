<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>画像</th>
      <th>投稿者</th>
      <th>コメント数</th>
      <th>タグ</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to admin_post_path(post.id) do %>
            <%= image_tag post.get_image(100,100) %>
          <% end %>
        </td>
        <td><%= post.user.name %></td>
        <td><%= link_to "#{post.comments.count} コメント", admin_post_path(post.id) %></td>
        <td><% post.tag_list.each do |tag|%>
          <div class="btn btn-primary">
            <%= link_to tag, admin_posts_path(tag_name: tag), class: "text-white" %>
          </div>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>