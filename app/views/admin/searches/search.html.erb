<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
      <table class="table table-hover table-inverse">
        <% if @range == "User" %>
        <h2>Users search for "<%= @word %>"</h2>
          <thead>
            <tr>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <thead>
            <tr>
              <th>住所</th>
            </tr>
          <tbody>
          <h2>Posts search for "<%= @word %>"</h2>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.address , post_path(post.id) %></td>
            </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>