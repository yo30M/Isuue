

<div class="container my-4">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4><%= @user.name %>さんの会員情報編集</h4>
    </div>
    </div>
    <div>
      <%= flash[:alert] %>
    </div>
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "user_name" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :有効 %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :退会 %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
  </div>
</div>