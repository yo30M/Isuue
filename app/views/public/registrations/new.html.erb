<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h4>新規会員登録</h4>

       <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <%= render 'public/shared/error_messages', resource: @user %>
        <table class="user_info user_form">
          <thead>
            <th></th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <tr>
              <td><%= f.label :name, class: "user_name" %></td>
              <td colspan="2"><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
              <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
              <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>

      <h6>既に登録済みの方</h6>
      <p><%= link_to "こちら", new_user_session_path, class: "underline" %>からログインしてください。</p>
    </div>
  </div>
</div>