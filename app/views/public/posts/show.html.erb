<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
      <h2>投稿情報</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>画像</th>
            <th>投稿者</th>
            <th>タグ</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @post.get_image(100,100) %>
            </td>
            <td><%= @post.user.name %></td>
            <td><% @post.tag_list.each do |tag|%>
              <div class="btn btn-primary">
                <%= link_to tag, posts_path(tag_name: tag), class: "text-white" %>
              </div>
                <% end %>
            </td>
          </tr>
        </tbody>
        <thead>
          <tr>
            <th>座り心地</th>
            <th>周辺情報</th>
          </tr>
          <tr>
            <td><%= @post.comfort %></td>
            <td><%= @post.environment %></td>
          </tr>
        </thead>
      </table>
      <div class="form-group">
          <% if @post.user == current_user %>
            <%= link_to "編集", edit_post_path(@post), class: "btn btn-primary" %>
            <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger" %>
          <% end %>
          <% if @post.favorited_by?(current_user) %>
            <p>
              <%= link_to post_favorites_path(@post), method: :delete do %>
                ♥<%= @post.favorites.count %> いいね
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to post_favorites_path(@post), method: :post do %>
                ♡<%= @post.favorites.count %> いいね
              <% end %>
            </p>
          <% end %>
        </div>
      <div>
        <p>コメント件数：<%= @post.comments.count %></p>
          <% @post.comments.each do |comment| %>
            <%= comment.user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
            <% if comment.user == current_user %>
              <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-danger" %>
            <% end %>
          <% end %>
      </div>
      <div>
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>