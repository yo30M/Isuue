

<div class='container'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
  		<h2>投稿情報</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= image_tag @post.get_image(100,100) %>
          </td>
          <td><p>投稿ユーザー：<%= @post.user.name %></p></td>
          <td><p>住所：<%= @post.address %></p></td>
          <td><p>座り心地：<%= @post.comfort %></p></td>
          <td><p>周辺情報：<%= @post.environment %></p></td>
            <% if @post.user == current_user %>
              <%= link_to "編集", edit_post_path(@post) %>
              <%= link_to "削除", post_path(@post), method: :delete %>
            <% end %>
            <% if @post.favorited_by?(current_user) %>
              <p>
                <%= link_to post_favorites_path(@post), method: :delete do %>
                  ♥<%= @post.favorites.count %> いいね
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to post_favorites_path(@post), method: :post do %>
                  ♡<%= @post.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
        </tr>
      </table>
      <div>
        <p>コメント件数：<%= @post.comments.count %></p>
          <% @post.comments.each do |comment| %>
            <%= comment.user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
            <% if comment.user == current_user %>
              <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
            <% end %>
          <% end %>
      </div>
      <div>
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>