<div class = "container my-4">
  <h4><strong style="background-color:#EEEEEE;">マイページ</strong></h4>
  <div class = "row">
    <strong><p class = "mr-5" >登録情報</p></strong>
    <div class="col"><%= link_to "編集", edit_information_path, class:"btn btn-success" %></div>
    <div class="col"><%= link_to "パスワードを変更する", edit_user_registration_path, class: "btn btn-success m12" %></div>
  </div>

  <div class = "row">
    <table class ="table table-bordered">
      <tr>
        <td>Name</td>
        <td>
          <%= current_user.name %>
        </td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <td>
          <% @posts.each do |post| %>
            <div>
              <%= link_to post_path(post.id) do %>
                <%= image_tag post.get_image(100,100) %>
              <% end %>
              <p>投稿ユーザー：<%= post.user.name %></p>
              <p>住所：<%= post.address %></p>
              <p>座り心地：<%= post.comfort %></p>
              <p>周辺情報：<%= post.environment %></p>
            </div>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>