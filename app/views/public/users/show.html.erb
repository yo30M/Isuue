
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
      </table>

        <div class='row'>
          <%= link_to edit_information_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
          </div>
    <div class='col-md-8 offset-md-1'>
      <h2>投稿</h2>
      <% @posts.each do |post| %>
        <div>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image(100,100) %>
          <% end %>
          <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
