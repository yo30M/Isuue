<div class="container my-4">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4><strong style="background-color:#EEEEEE;">UserInfomation</strong></h4>
      <%= form_with model: @user, url: update_information_path do |f| %>
        <%= render 'public/shared/error_messages', resource: @user %>
        <div class="form-group">
          <%= f.label :name, class: "user_name" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
          <%= link_to "退会する", confirm_confirmation_path, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>